{
  "name": "Chess.com Keyboard",
  "version": "4.0.0",
  "manifest_version": 2,
  "description": "This browser extension allows you to make moves on Chess.com using your keyboard",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://www.chess.com/"
  ],
  "browser_action": {
    "default_icon": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/*"
      ],
      "js": [
        "inject.js"
      ],
      "run_at": "document_end",
      "css": [
        "styles/main.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "build.js"
  ]
}
